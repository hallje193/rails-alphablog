<h1 align="center">Log In</h1>
<div class="row">
  <div class="col-xs-12">
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form", autocomplete: "off"}, url: login_path) do |f| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :email %> <br>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email, placeholder: "Enter email", rows: 10, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :password %> <br>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, placeholder: "Enter password", rows: 10, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Login", class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>

  </div>
</div>

