<h1 align="center">Show Article</h1>
<hr>

<div class="col-xs-8 col-xs-offset-2">
  <div class="well well-lg">
    <font size="4">
      <div class="col-xs-1">
        <b>Title:</b>
      </div>
      <div class="col-xs-offset-3">
        <%= @article.title %>
      </div>
    </font>
  </div>
</div>

<div class="col-xs-8 col-xs-offset-2">
  <div class="well well-lg">
    <font size="4">
      <div class="col-xs-3">
        <b>Description:</b>
      </div>
    </font>
    <div class="col-xs-offset-3">
      <%= raw(@article.description) %>
    </div>
  </div>
</div>

<div class="col-xs-8 col-xs-offset-2">
  <div class="well well-lg">
    <% if @article.user == current_user %>
      <p align="center">
        <%= link_to "Edit", edit_article_path(@article), class: "btn btn-md btn-primary", style: "width: 8.8em;" %>
        <%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-md btn-danger", style: "width: 10em;" %>
      </p>
    <% end %>

    <p align="center">
      <%= link_to "Back to articles", articles_path, class: "btn btn-md" %>
    </p>
  </div>
</div>
