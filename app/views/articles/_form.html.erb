<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form", autocomplete: "off"}) do |f| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :title %> <br>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, placeholder: "Enter title", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :description %> <br>
        </div>
        <div class="col-sm-8">
          <%= f.trix_editor :description, placeholder: "Body of article", style: "overflow-y: auto; max-height:800px; height: 175px;", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-primary btn-lg"%>
          <%= link_to "Cancel", :back, class: "btn btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/errors", obj: @article %>
