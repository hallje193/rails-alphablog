<h1 align="center"><%= @user.username.capitalize %>'s Profile</h1>

<div class="col-xs-8 col-xs-offset-2">
  <div class="well">
    <p>
      <strong>Username:</strong>
      <%= @user.username %>
    </p>
    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>
    <div class="article-actions" style="padding-top:5px;">
      <% if (current_user = @user && logged_in?) || admin? %>
        <%= link_to "Edit", edit_user_path(@user), class: "btn btn-sm btn-primary" %>
      <% end %>
      <%= link_to "Back to all users", users_path, class: "btn btn-sm btn-primary" %>
    </div>
  </div>
</div>
