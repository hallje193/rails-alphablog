<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :title %> <br>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, placeholder: "Enter title", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :description %> <br>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, placeholder: "Body of article", rows: 10, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-primary btn-lg"%>
        </div>
      </div>
    <% end %>

    <%= link_to "Back to all articles", articles_path, class: "col-sm-offset-2 col-sm-3" %>
  </div>
</div>

<% if @article.errors.any? %>
  <p>
    <h2>Required</h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </p>
<% end %>
