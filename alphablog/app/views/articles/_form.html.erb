<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form", autocomplete: "off"}) do |f| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :title %> <br>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, placeholder: "Enter title", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :description %> <br>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, placeholder: "Body of article", rows: 10, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-primary btn-lg"%>
        </div>
      </div>
    <% end %>

    <%= link_to "Cancel and return to articles", articles_path, class: "col-sm-offset-2 col-sm-8" %>
  </div>
</div>

<%= render "shared/errors", obj: @article %>
